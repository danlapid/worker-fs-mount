{
  "name": "worker-fs-mount",
  "version": "0.1.1",
  "description": "Mount WorkerEntrypoints as virtual filesystems in Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./fs": {
      "types": "./dist/fs-promises.d.ts",
      "import": "./dist/fs-promises.js",
      "require": "./dist/fs-promises.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "filesystem",
    "mount",
    "vfs",
    "jsrpc"
  ],
  "author": "Cloudflare",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danlapid/worker-fs-mount.git",
    "directory": "packages/worker-fs-mount"
  },
  "bugs": {
    "url": "https://github.com/danlapid/worker-fs-mount/issues"
  },
  "homepage": "https://github.com/danlapid/worker-fs-mount/tree/main/packages/worker-fs-mount#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@types/node": "^25.0.3",
    "typescript": "^5.7.2",
    "vitest": "~3.2.0",
    "wrangler": "^4.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
