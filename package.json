{
  "name": "worker-fs-mount-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=worker-fs-mount --filter=durable-object-fs --filter=r2-fs --filter=memory-fs run build",
    "dev": "pnpm -r --filter=worker-fs-mount --filter=durable-object-fs --filter=r2-fs --filter=memory-fs run dev",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r --filter=worker-fs-mount --filter=durable-object-fs --filter=r2-fs --filter=memory-fs run typecheck",
    "test": "pnpm run build && pnpm -r --filter=worker-fs-mount-tests run test",
    "test:watch": "pnpm -r --filter=worker-fs-mount-tests run test:watch",
    "do-example": "pnpm run build && pnpm -r --filter=durable-object-backed-fs-example run dev",
    "r2-example": "pnpm run build && pnpm -r --filter=r2-backed-fs-example run dev",
    "sync-do-example": "pnpm run build && pnpm -r --filter=sync-do-fs-example run dev",
    "generate-types": "pnpm -r --filter=worker-fs-mount-tests --filter=durable-object-backed-fs-example --filter=r2-backed-fs-example --filter=sync-do-fs-example run generate-types",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm test && changeset publish",
    "ci:publish": "pnpm build && node scripts/publish.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  }
}
